compilation_database_dir: .
output_directory: puml
generate_links:
  link: 'https://github.com/godotengine/godot/blob/{{ git.commit }}/{{ element.source.path }}#L{{ element.source.line }}'
  tooltip: '{% if "comment" in element %}{{ abbrv(trim(replace(element.comment, "\n+", " ")), 256) }}{% else %}{{ element.name }}{% endif %}'
diagrams:
  object_class_hierarchy_diagram:
    type: class
    generate_method_arguments: full
    generate_packages: false
    glob:
      - core/*.cpp
      - core/crypto/*.cpp
      - core/io/*.cpp
      - core/math/*.cpp
      - core/os/*.cpp
    include:
      subclasses:
        - Reference
        - Object
        - Resource
      relationships:
        - inheritance
    exclude:
      namespaces:
        - std
      access:
        - public
        - protected
        - private
    plantuml:
      before:
        - 'title Godot Object class hierarchy'
        - 'left to right direction'
  object_class_context_diagram:
    type: class
    generate_method_arguments: full
    generate_packages: false
    glob:
      - core/*.cpp
      - core/crypto/*.cpp
      - core/io/*.cpp
      - core/math/*.cpp
      - core/os/*.cpp
    include:
      context:
        - Object
    exclude:
      namespaces:
        - std
      relationships:
        - dependency
      access:
        - protected
        - private
    plantuml:
      before:
        - 'title Godot Object class hierarchy'