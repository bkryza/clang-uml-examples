compilation_database_dir: _build
output_directory: ../puml
add_compile_flags:
  - -Wno-unqualified-std-cast-call
  - -Wno-inconsistent-missing-override
diagrams:
  all_classes_diagram:
    type: class
    title: drogon class hierarchy
    glob:
      - lib/src/*.cc
    using_namespace:
      - drogon
    include:
      namespaces:
        - drogon
    exclude:
      namespaces:
        - drogon::internal
        - drogon::test
      access:
        - public
        - protected
        - private
  drobjectbase_hierarchy:
    type: class
    title: "'drobjectbase' class hierarchy"
    glob:
      - lib/src/*.cc
    using_namespace:
      - drogon
    include:
      namespaces:
        - drogon
      subclasses:
        - drogon::DrObjectBase
      relationships:
        - inheritance
    exclude:
      namespaces:
        - drogon::internal
        - drogon::test
      access:
        - public
        - protected
        - private
  trantor_class_diagram:
    type: class
    title: trantor class diagram
    glob:
      - trantor/trantor/utils/*.cc
      - trantor/trantor/net/*.cc
    using_namespace:
      - trantor
    include:
      namespaces:
        - trantor
    exclude:
      access:
        - protected
        - private